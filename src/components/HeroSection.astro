---
// تعريف الخصائص (Props) التي يستقبلها المكون
interface Props {
  titleLine1: string;
  titleLine2: string;
  description: string;
  bgImage: string;
  heroImage: string;
  gameUrl: string;
  imageSide?: "left" | "right"; // خاصية اختيارية لتحديد مكان الصورة
}

const {
  titleLine1,
  titleLine2,
  description,
  bgImage,
  heroImage,
  gameUrl,
  imageSide = "right", // القيمة الافتراضية هي اليمين
} = Astro.props;

// تحديد ترتيب العناصر بناءً على اتجاه الصورة
// في الشاشات الصغيرة (Mobile) سيظهر النص أولاً دائماً، الترتيب يطبق فقط على md وأكبر
const textOrder = imageSide === "left" ? "md:order-2" : "md:order-1";
const imageOrder = imageSide === "left" ? "md:order-1" : "md:order-2";
---

<!-- Hero Section -->
<section class="relative min-h-screen flex items-center pt-20 overflow-hidden">
  <!-- Background Image with dynamic URL -->
  <div
    class="absolute inset-0 bg-cover bg-center opacity-10 blur-sm mix-blend-overlay"
    style={`background-image: url('${bgImage}');`}
  >
  </div>
  
  <!-- Background Gradient -->
  <div
    class="absolute inset-0 bg-gradient-to-r from-dark-bg via-dark-bg/95 to-dark-bg/40"
  >
  </div>

  <div
    class="container mx-auto px-4 relative z-10 grid md:grid-cols-2 gap-12 items-center"
  >
    <!-- Text Column -->
    <div class={`text-left ${textOrder}`}>
      <h1
        class="text-6xl md:text-8xl font-black mb-6 leading-none italic uppercase tracking-tighter drop-shadow-2xl"
      >
        <span
          class="font-extrabold bg-clip-text bg-gradient-to-r from-white to-gray-300"
          >{titleLine1}</span
        ><br />
        <span
          class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-accent"
          >{titleLine2}</span
        >
      </h1>

      <p
        class="text-gray-300 text-lg md:text-xl leading-relaxed mb-10 max-w-xl border-l-4 border-primary pl-6"
      >
        {description}
      </p>

      <div class="flex flex-wrap gap-4">
        <a
          href={gameUrl}
          class="group relative px-10 py-4 bg-gradient-to-r from-primary to-secondary rounded-full font-black uppercase tracking-widest text-white overflow-hidden transition-all hover:scale-105 hover:shadow-[0_0_30px_rgba(217,0,143,0.6)]"
        >
          <span class="relative z-10 flex items-center gap-2">
            Play Now
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z"
                clip-rule="evenodd"></path>
            </svg>
          </span>
          <div
            class="absolute inset-0 bg-white/20 translate-y-full group-hover:translate-y-0 transition-transform duration-300"
          >
          </div>
        </a>
      </div>
    </div>

    <!-- Hero Image Column -->
    <div class={`relative hidden md:block group perspective-1000 ${imageOrder}`}>
      <div
        class="relative transform transition-all duration-700 group-hover:rotate-y-12 group-hover:rotate-x-6"
      >
        <div
          class="absolute -inset-1 bg-gradient-to-r from-primary to-accent rounded-3xl blur opacity-30 group-hover:opacity-75 transition duration-1000 group-hover:duration-200"
        >
        </div>
        <img
          src={heroImage}
          alt={titleLine1 + " " + titleLine2}
          class="relative rounded-3xl shadow-2xl border border-white/10 w-full object-cover aspect-[4/3] transform transition-transform hover:scale-[1.02]"
        />

        <!-- Floating Badge -->
        <div
          class="absolute -bottom-6 -right-6 bg-green-500/30 backdrop-blur-sm border border-white/10 p-4 rounded-2xl shadow-xl flex items-center gap-3 animate-bounce-slow"
        >
          <div
            class="w-12 h-12 rounded-lg bg-white/10 flex items-center justify-center text-white font-bold"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-google-play" viewBox="0 0 16 16">
  <path d="M14.222 9.374c1.037-.61 1.037-2.137 0-2.748L11.528 5.04 8.32 8l3.207 2.96zm-3.595 2.116L7.583 8.68 1.03 14.73c.201 1.029 1.36 1.61 2.303 1.055zM1 13.396V2.603L6.846 8zM1.03 1.27l6.553 6.05 3.044-2.81L3.333.215C2.39-.341 1.231.24 1.03 1.27"/>
</svg>
          </div>
          <div class="text-left">
            <div class="text-xs text-white uppercase tracking-wider">
              Available Now
            </div>
            <div class="text-white font-bold">Play for Free</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>