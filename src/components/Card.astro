---
interface Props {
	title: string;
	description?: string;
	image: string;
	link: string;
}

const { title, description, image, link } = Astro.props;
---

<div class="group relative rounded-2xl overflow-hidden bg-dark-surface border border-white/5 hover:border-primary/50 transition-all duration-300 hover:shadow-[0_0_20px_rgba(217,0,143,0.3)]">
	<div class="aspect-[4/3] overflow-hidden relative">
		<img src={image} alt={title} class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" />
		<div class="absolute inset-0 bg-gradient-to-t from-dark-surface via-transparent to-transparent opacity-80"></div>
        <!-- Play Icon Overlay -->
        <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <div class="w-12 h-12 rounded-full bg-primary/90 flex items-center justify-center text-white shadow-lg backdrop-blur-sm transform scale-0 group-hover:scale-100 transition-transform duration-300 delay-75">
                <svg class="w-5 h-5 ml-1" fill="currentColor" viewBox="0 0 20 20"><path d="M6.3 2.841A1.5 1.5 0 004 4.11V15.89a1.5 1.5 0 002.3 1.269l9.344-5.89a1.5 1.5 0 000-2.538L6.3 2.84z"></path></svg>
            </div>
        </div>
	</div>
    <div class="absolute bottom-0 left-0 right-0 p-4 bg-gradient-to-t from-dark-surface to-transparent">
        <h3 class="text-lg font-bold text-white group-hover:text-primary transition-colors truncate">{title}</h3>
        {description && <p class="text-gray-400 text-xs mt-1 line-clamp-2">{description}</p>}
    </div>
	<a href={link} class="absolute inset-0 z-10" aria-label={`View ${title}`}></a>
</div>
