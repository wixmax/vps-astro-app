---
interface Props {
  text: string;
  author: string;
  role: string;
  image: string;
  rating: number;
}

const { text, author, role, image, rating } = Astro.props;
---

<div
  class="bg-dark-surface p-8 rounded-2xl min-w-[300px] md:min-w-[350px] flex flex-col justify-between h-full shadow-sm border border-white/5"
>
  <p class="text-gray-300 text-sm leading-relaxed mb-6">
    {text}
  </p>

  <div class="flex items-center justify-between mt-auto">
    <div class="flex items-center gap-3">
      <img
        src={image}
        alt={author}
        class="w-10 h-10 rounded-full object-cover"
      />
      <div>
        <h4 class="text-white font-bold text-sm">{author}</h4>
        <p class="text-accent text-xs font-medium">{role}</p>
      </div>
    </div>

    <div class="flex gap-1">
      {
        Array.from({ length: 5 }).map((_, i) => (
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class={`w-4 h-4 ${i < rating ? "text-amber-400" : "text-gray-600"}`}
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
        ))
      }
    </div>
  </div>
</div>
