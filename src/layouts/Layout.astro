---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Download the best games on Google Play" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
		<script is:inline>
			// Force dark mode for this theme as it is a dark-themed site by default
			document.documentElement.classList.add('dark');
			localStorage.setItem('color-theme', 'dark');
		</script>
	</head>
	<body class="bg-dark-bg text-white font-sans min-h-screen flex flex-col overflow-x-hidden selection:bg-primary selection:text-white">
		<div class="fixed inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-secondary/20 via-dark-bg to-dark-bg -z-10 pointer-events-none"></div>
		<Navbar />
		<main class="flex-grow">
			<slot />
		</main>
		<Footer />
	</body>
</html>
