---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import TestimonialSlider from "../components/TestimonialSlider.astro";

const games = [
  {
    title: "Car Parking",
    image: "/images/car-parking.png",
    link: "https://gamesmobzone.com/com.gamesmobzone.carparkingrealdrivingsimulator",
  },
  {
    title: "Subway Santa Princess",
    image: "/images/subway-santa.png",
    link: "https://gamesmobzone.com/com.gamesmobzone.subwaysantaprincess",
  },
  {
    title: "Subway Rush",
    image: "/images/subway-rush.png",
    link: "https://gamesmobzone.com/com.gamesmobzone.subwayrushendlessrun",
  },
];

const popularGames = [
  {
    title: "Drift King",
    image: "https://placehold.co/600x400/c53030/ffffff?text=Drift+King",
    link: "#",
  },
  {
    title: "Sniper Elite",
    image: "https://placehold.co/600x400/2b6cb0/ffffff?text=Sniper+Elite",
    link: "#",
  },
  {
    title: "Desert Storm",
    image: "https://placehold.co/600x400/d69e2e/ffffff?text=Desert+Storm",
    link: "#",
  },
];
---

<Layout title="G-Mame - Level Up Your Game">
  <!-- Hero Section -->
  <section
    class="relative min-h-screen flex items-center pt-20 overflow-hidden"
  >
    <!-- Background Image/Gradient -->
    <div
      class="absolute inset-0 bg-[url('/images/subway-santa.png')] bg-cover bg-center opacity-10 blur-sm mix-blend-overlay"
    >
    </div>
    <div
      class="absolute inset-0 bg-gradient-to-r from-dark-bg via-dark-bg/95 to-dark-bg/40"
    >
    </div>

    <div
      class="container mx-auto px-4 relative z-10 grid md:grid-cols-2 gap-12 items-center"
    >
      <div class="text-left">
        <h1
          class="text-6xl md:text-8xl font-black mb-6 leading-none italic uppercase tracking-tighter drop-shadow-2xl"
        >
          <span
            class="text-transparent bg-clip-text bg-gradient-to-r from-white to-gray-300"
            >Subway</span
          ><br />
          <span
            class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-accent"
            >Santa</span
          >
        </h1>

        <p
          class="text-gray-300 text-lg md:text-xl leading-relaxed mb-10 max-w-xl border-l-4 border-primary pl-6"
        >
          Save your loved beautiful Princess and Santa Claus bypass so many
          obstacles on her Subway rush as fast as you can to escape the police.
          Use skateboard, Jet-pack to run faster, jump and slide to avoid
          hitting many obstacles on your subway trains.
        </p>

        <div class="flex flex-wrap gap-4">
          <a
            href="#play"
            class="group relative px-10 py-4 bg-gradient-to-r from-primary to-secondary rounded-full font-black uppercase tracking-widest text-white overflow-hidden transition-all hover:scale-105 hover:shadow-[0_0_30px_rgba(217,0,143,0.6)]"
          >
            <span class="relative z-10 flex items-center gap-2">
              Play Now
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z"
                  clip-rule="evenodd"></path>
              </svg>
            </span>
            <div
              class="absolute inset-0 bg-white/20 translate-y-full group-hover:translate-y-0 transition-transform duration-300"
            >
            </div>
          </a>
        </div>
      </div>

      <!-- Hero Image -->
      <div class="relative hidden md:block group perspective-1000">
        <div
          class="relative transform transition-all duration-700 group-hover:rotate-y-12 group-hover:rotate-x-6"
        >
          <div
            class="absolute -inset-1 bg-gradient-to-r from-primary to-accent rounded-3xl blur opacity-30 group-hover:opacity-75 transition duration-1000 group-hover:duration-200"
          >
          </div>
          <img
            src="/images/subway-santa-hero.png"
            alt="Subway Santa Gameplay"
            class="relative rounded-3xl shadow-2xl border border-white/10 w-full object-cover aspect-[4/3] transform transition-transform hover:scale-[1.02]"
          />

          <!-- Floating Badge -->
          <div
            class="absolute -bottom-6 -right-6 bg-white/30 backdrop-blur-sm border border-white/10 p-4 rounded-2xl shadow-xl flex items-center gap-3 animate-bounce-slow"
          >
            <div
              class="w-12 h-12 rounded-full bg-white/30 flex items-center justify-center text-green-500 font-bold text-"
            >
              FREE
            </div>
            <div class="text-left">
              <div class="text-xs text-primary uppercase tracking-wider">
                Available Now
              </div>
              <div class="text-black font-bold">Play for Free</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Game Collection Section -->
  <section id="games" class="py-24 relative">
    <div
      class="absolute inset-0 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-secondary/10 to-transparent pointer-events-none"
    >
    </div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="text-center mb-16">
        <h2
          class="text-4xl md:text-5xl font-black text-white mb-4 uppercase italic"
        >
          Find our Games on PLAYSTORE
        </h2>
        <div class="w-24 h-1 bg-gradient-to-r from-primary to-accent mx-auto">
        </div>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          games.map((game) => (
            <Card title={game.title} image={game.image} link={game.link} />
          ))
        }
      </div>
    </div>
  </section>

  <TestimonialSlider />
</Layout>
