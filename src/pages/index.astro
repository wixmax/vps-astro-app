---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

const games = [
  {
    title: "Cyber Warrior",
    image: "https://placehold.co/600x400/D9008F/ffffff?text=Cyber+Warrior",
    link: "#"
  },
  {
    title: "Neon Racer",
    image: "https://placehold.co/600x400/6C00A2/ffffff?text=Neon+Racer",
    link: "#"
  },
  {
    title: "Space Odyssey",
    image: "https://placehold.co/600x400/00F0FF/000000?text=Space+Odyssey",
    link: "#"
  },
  {
    title: "Mech Battle",
    image: "https://placehold.co/600x400/1A0B2E/ffffff?text=Mech+Battle",
    link: "#"
  }
];

const popularGames = [
    { title: "Drift King", image: "https://placehold.co/600x400/c53030/ffffff?text=Drift+King", link: "#" },
    { title: "Sniper Elite", image: "https://placehold.co/600x400/2b6cb0/ffffff?text=Sniper+Elite", link: "#" },
    { title: "Desert Storm", image: "https://placehold.co/600x400/d69e2e/ffffff?text=Desert+Storm", link: "#" },
    { title: "Urban Ops", image: "https://placehold.co/600x400/2f855a/ffffff?text=Urban+Ops", link: "#" },
];
---

<Layout title="G-Mame - Level Up Your Game">
	<!-- Hero Section -->
	<section class="relative min-h-screen flex items-center pt-20 overflow-hidden">
        <!-- Background Image/Gradient -->
		<div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1542751371-adc38448a05e?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80')] bg-cover bg-center opacity-20 mix-blend-overlay"></div>
        <div class="absolute inset-0 bg-gradient-to-r from-dark-bg via-dark-bg/90 to-transparent"></div>
		
		<div class="container mx-auto px-4 relative z-10 grid md:grid-cols-2 gap-12 items-center">
            <div class="text-left">
                <h1 class="text-5xl md:text-7xl font-black mb-6 leading-tight italic uppercase tracking-tighter">
                    It's time to <br/>
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-white to-gray-400">up your game!</span><br/>
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-accent">Get Overworld</span> <span class="text-white">Today</span>
                </h1>
                
                <div class="flex flex-wrap gap-4 mt-10">
                    <a href="#games" class="group relative px-8 py-3 bg-gradient-to-r from-primary to-secondary rounded-sm font-bold uppercase tracking-wider text-white overflow-hidden transition-all hover:scale-105 hover:shadow-[0_0_20px_rgba(217,0,143,0.5)]">
                        <span class="relative z-10">Play Now</span>
                        <div class="absolute inset-0 bg-white/20 translate-y-full group-hover:translate-y-0 transition-transform duration-300"></div>
                    </a>
                    <a href="#" class="px-8 py-3 border border-white/30 rounded-sm font-bold uppercase tracking-wider text-white hover:bg-white/10 transition-all flex items-center gap-2">
                        Watch Video <span class="text-primary">▶</span>
                    </a>
                </div>
            </div>
            <!-- Hero Image/Graphic (Optional, could be a character) -->
            <div class="hidden md:block relative">
                 <!-- Placeholder for a hero character image if needed -->
            </div>
		</div>
	</section>

	<!-- Game Collection Section -->
	<section id="games" class="py-24 relative">
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-secondary/10 to-transparent pointer-events-none"></div>
		<div class="container mx-auto px-4 relative z-10">
			<div class="text-center mb-16">
				<h2 class="text-4xl md:text-5xl font-black text-white mb-4 uppercase italic">Game Collection</h2>
                <div class="w-24 h-1 bg-gradient-to-r from-primary to-accent mx-auto"></div>
			</div>
			
			<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
				{games.map((game) => (
					<Card
						title={game.title}
						image={game.image}
						link={game.link}
					/>
				))}
			</div>
		</div>
	</section>

    <!-- Popular Games Section (Matching reference right side) -->
    <section class="py-24 bg-dark-bg/50">
        <div class="container mx-auto px-4">
            <div class="flex justify-between items-end mb-12">
                 <h2 class="text-3xl md:text-4xl font-black text-white uppercase italic">Popular Games</h2>
                 <a href="#" class="text-primary hover:text-white transition uppercase text-sm font-bold">View All</a>
            </div>
           
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                {popularGames.map((game) => (
                     <div class="group relative rounded-3xl overflow-hidden aspect-video border border-white/5 hover:border-accent/50 transition-all">
                        <img src={game.image} alt={game.title} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"/>
                        <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent"></div>
                        <div class="absolute bottom-0 left-0 p-6">
                            <h3 class="text-xl font-bold text-white">{game.title}</h3>
                            <div class="flex text-yellow-400 text-sm mt-1">★★★★★</div>
                        </div>
                     </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Connect Banner -->
    <section class="py-20">
        <div class="container mx-auto px-4">
            <div class="rounded-3xl bg-gradient-to-r from-secondary to-primary p-12 relative overflow-hidden flex items-center justify-between">
                <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/carbon-fibre.png')] opacity-10"></div>
                <div class="relative z-10">
                    <h2 class="text-3xl md:text-4xl font-black text-white uppercase italic leading-tight">Connect with us<br/>for gaming update</h2>
                </div>
                <div class="relative z-10">
                     <a href="#" class="px-8 py-3 bg-white text-secondary font-black uppercase rounded-sm hover:bg-gray-100 transition-colors shadow-lg">Connect Now →</a>
                </div>
            </div>
        </div>
    </section>
</Layout>
